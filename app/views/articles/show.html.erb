<div class="row">

<div class="col-xs-8 col-xs-offset-2">
<h2 align="center">Title:  <%=@article.title%></h2>
<div class="well">
	<h4 align="center" class="description"><strong>Description </strong></h4>
	<hr>
	<%= simple_format(@article.description)%>

<div class="article-action">
<%= link_to "Back To Article Listing" , articles_path ,class:"btn btn-primary btn-xs"%>
<%= link_to "Edit this Article" , edit_article_path(@article),class:"btn btn-success btn-xs"%>
<%= link_to "Delete This Article", article_path(@article),method: :delete,data:{confirm:"Are You Sure?"},class:"btn btn-xs btn-danger"%>
</div>
</div>
</div>
</div>
