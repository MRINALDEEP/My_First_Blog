<%if obj.errors.any?%>
<div class="row">
<div class="col-xs-12">
<div class="panel panel-danger">
<div class="panel-heading">
<h1 class="panel-title"><b>
	<%= pluralize(obj.errors.count,'error')%>
    Prohibited This Article From Being Saved</b>
</h1>
<div class="panel-body">
<ul>
<% obj.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<%end%>
</ul>
</div>
</div>
</div>
</div>
</div>
<%end%>