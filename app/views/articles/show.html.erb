<div class="row">

<div class="col-xs-8 col-xs-offset-2">
<h2 align="center">Title:  <%=@article.title%></h2>
<div class="well">
	        <% if @article.user %>
	        <ul class="listing list">
	        <div class="row">
		    <div class="center col-md-3 col-md-offset-4">
		    <li>Created By</li>
            <li><%= link_to gravatar_for(@article.user),user_path(@article.user)%></li>
            <li class="article-title"><%= link_to @article.user.username,user_path(@article.user)%></li>
            <li><small><%= pluralize(@article.user.articles.count,"Article") if @article.user.articles %></small></li>
            </div>
            </div>
            </ul>
            <%end%>
	<h4 class="article-title center description"><strong>Description </strong></h4>
	<hr>
	<%= simple_format(@article.description)%>

<div class="article-action">
<%= link_to "Back To Article Listing" , articles_path ,class:"btn btn-primary btn-xs"%>
 <% if logged_in? && current_user==@article.user%>
<%= link_to "Edit this Article" , edit_article_path(@article),class:"btn btn-success btn-xs"%>
<%= link_to "Delete This Article", article_path(@article),method: :delete,data:{confirm:"Are You Sure?"},class:"btn btn-xs btn-danger"%>
<% end %>
</div>
</div>
</div>
</div>
