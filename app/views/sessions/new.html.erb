
<h1 align="center">Log In </h1>
<div class="center">
<%= form_for(:session, :html => { class:"form-horizontal" , role: "form"},url: login_path) do |art| %>

<div class="form-group">
	<div class="control-label col-sm-2">
	<%= art.label :email %>
	</div>
	<div class="col-sm-8">
	<%= art.email_field :email ,class: "form-control",placeholder:"Type Your Email"%>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	<%= art.label :password %>
	</div>
	<div class="col-sm-8">
	<%= art.password_field :password ,class: "form-control",autocomplete:"off",placeholder:"Type Password",autofocus:true%>
    </div>
</div>

<div class="form-group">
	<div class="col-md-4 col-md-offset-4">
	<%= art.submit "Log In",class:"btn btn-primary"%>
	</div>
</div>



<% end %>
</div>
</div>
</div>
<div class="center">
<%= link_to "Cancel Request And Go Back To Article Listing" , articles_path %>
</div>
