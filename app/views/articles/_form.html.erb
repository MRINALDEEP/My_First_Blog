
<%= render 'shared/errors' ,obj: @article %>



<div class="row">
	<div class='col-xs-12'>

<%= form_for(@article, :html => { class:"form-horizontal" , role: "form"}) do |art| %>
<div class="form-group">
	<div class="control-label col-sm-2">
	<%= art.label :title %>
	</div>
	<div class="col-sm-8">
	<%= art.text_field :title  ,class: "form-control",placeholder:"Title Of Article",autofocus:true%>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	<%= art.label :description %>
	</div>
	<div class="col-sm-8">
	<%= art.text_area :description ,class: "form-control",rows:15,placeholder:"Body Of The Article"%>
	</div>
	</div>

<div class="form-group">
	<div class="col-sm-offset-5 col-sm-10">
	<%= art.submit class:"btn btn-primary"%>
	</div>
	</div>



<% end %>
</div>
</div>
<div class="col-sm-offset-4 col-sm-8">
<%= link_to "Cancel Request And Go Back To Article Listing" , articles_path %>
</div>
